<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Light (300) -->
    <font
        app:fontStyle="normal"
        app:fontWeight="300"
        app:font="@font/funnelsans_light" />
    <font
        app:fontStyle="italic"
        app:fontWeight="300"
        app:font="@font/funnelsans_lightitalic" />

    <!-- Regular (400) -->
    <font
        app:fontStyle="normal"
        app:fontWeight="400"
        app:font="@font/funnelsans_regular" />
    <font
        app:fontStyle="italic"
        app:fontWeight="400"
        app:font="@font/funnelsans_italic" />

    <!-- Medium (500) -->
    <font
        app:fontStyle="normal"
        app:fontWeight="500"
        app:font="@font/funnelsans_medium" />
    <font
        app:fontStyle="italic"
        app:fontWeight="500"
        app:font="@font/funnelsans_mediumitalic" />

    <!-- SemiBold (600) -->
    <font
        app:fontStyle="normal"
        app:fontWeight="600"
        app:font="@font/funnelsans_semibold" />
    <font
        app:fontStyle="italic"
        app:fontWeight="600"
        app:font="@font/funnelsans_semibolditalic" />

    <!-- Bold (700) -->
    <font
        app:fontStyle="normal"
        app:fontWeight="700"
        app:font="@font/funnelsans_bold" />
    <font
        app:fontStyle="italic"
        app:fontWeight="700"
        app:font="@font/funnelsans_bolditalic" />

    <!-- ExtraBold (800) -->
    <font
        app:fontStyle="normal"
        app:fontWeight="800"
        app:font="@font/funnelsans_extrabold" />
    <font
        app:fontStyle="italic"
        app:fontWeight="800"
        app:font="@font/funnelsans_extrabolditalic" />

</font-family>