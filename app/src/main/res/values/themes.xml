<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Actividad12" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/primary1</item>
        <item name="colorPrimaryVariant">@color/primary2</item>
        <item name="colorSecondary">@color/secondary1</item>
        <item name="colorSecondaryVariant">@color/secondary2</item>
        <item name="colorTertiary">@color/tertiary1</item>
        <item name="colorAccent">@color/tertiary2</item>
        <item name="android:colorBackground">@color/fondo</item>
        <item name="android:textColor">@color/text_color</item>

        <!-- ðŸ–‹ï¸ Fuente principal -->
        <item name="android:fontFamily">@font/funnelsansp</item>
    </style>
    <!-- Estilo personalizado para botones -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/funnelsansp</item>
        <item name="fontWeight">700</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/primary1</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Estilo para tÃ­tulos -->
    <style name="TitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/funnelsansp</item>
        <item name="fontWeight">700</item> <!-- Negrita -->
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Estilo para texto descriptivo -->
    <style name="DescriptionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/tertiary1</item>
        <item name="android:fontFamily">@font/funnelsansp</item>
        <item name="fontWeight">400</item> <!-- Regular -->
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">32dp</item>
    </style>

    <style name="Theme.Actividad12" parent="Base.Theme.Actividad12" />
</resources>